{
    "settings": [
        {
            "type": "string",
            "id": "lock_name",
            "label": "Name of the lock, to be shown as title of the widget"
        },
        {
            "type": "item",
            "id": "lock",
            "label": "Switch item for the lock, ON means \"locked\", OFF means \"unlocked\""
        },
        {
            "type": "item",
            "id": "lock_battery",
            "label": "Number item for the battery level (in %) of the lock"
        },
        {
            "type": "item",
            "id": "lock_signal",
            "label": "Number item for the signal level (0-5) of the lock"
        }
    ],
    "template": "<!-- style> img { filter: invert(60%) sepia(100%) hue-rotate(185deg) saturate(1000%) } </style -->\n\n<table style=\"width: 100%; text-align: center\">\n\n  <col width=\"20%\"></col>\n  <col width=\"20%\"></col>\n  <col width=\"20%\"></col>\n  <col width=\"20%\"></col>\n  <col width=\"20%\"></col>\n  \n  <tr>\n    <td colspan=\"5\" style=\"text-align: left\">\n      {{(config.lock_name)}}\n    </td>\n  </tr>\n  \n  <tr>\n    <td colspan=\"4\" rowspan=\"2\">\n      \n      <div ng-if=\"itemValue(config.lock) =='ON'\">\n        <button class=\"btn btn-lg\" style=\"background: transparent; color: white\"\n                ng-click=\"sendCmd(config.lock, 'OFF')\">\n          <widget-icon iconset=\"'eclipse-smarthome-classic'\" icon=\"'lock-closed'\" size=\"(config.icon_size)\"/>\n        </button>\n      </div>\n      \n      <div ng-if=\"itemValue(config.lock) =='OFF'\">\n        <button class=\"btn btn-lg\" style=\"background: red; color: white\"\n                ng-click=\"sendCmd(config.lock, 'ON')\">\n          <widget-icon iconset=\"'eclipse-smarthome-classic'\" icon=\"'lock-open'\" size=\"(config.icon_size)\"/>\n        </button>\n      </div>\n      \n    </td>\n    \n    <td>\n      <widget-icon iconset=\"'eclipse-smarthome-classic'\" icon=\"'battery'\" state=itemValue(config.lock_battery) size=\"config.icon_size/2\"/>\n    </td>\n    \n  <tr>\n    <td>\n      <widget-icon iconset=\"'eclipse-smarthome-classic'\" icon=\"'signal'\" state=itemValue(config.lock_signal) color=\"white\" size=\"config.icon_size/2\"/>\n    </td>\n\t</tr>\n  </tr>\n\n</table>\n\n",
    "name": "Nuki Lock",
    "author": "Max Stephan",
    "description": "Nuki Lock"
}
